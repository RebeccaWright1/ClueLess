<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<!------ Include the above in your HEAD tag ---------->
@model ClueLess.Models.Account
<div class="container bootstrap snippet" style="margin-top: 5%">
    <div class="row">
        <div class="col-sm-10"><h1>Edit Profile</h1></div>
    </div>
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
            </div>
            <div style="padding-top:30px" class="panel-body">
                @using (Ajax.BeginForm("CreateAccount", "UserController", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSuccess();" }))
                {
                    <div class="form-group">
                        <label for="email" class="col-md-3 control-label">Email</label>
                        @Html.TextBoxFor(model => model.Email)
                    </div>

                    <div class="form-group">
                        <label for="firstname" class="col-md-3 control-label">First Name</label>
                        @Html.TextBoxFor(model => model.FirstName)
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-md-3 control-label">Last Name</label>
                        @Html.TextBoxFor(model => model.LastName)
                    </div>
                    <div class="form-group">
                        <label for="usernmae" class="col-md-3 control-label">Username</label>
                        @Html.TextBoxFor(model => model.UserName)
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button id="btn-save" style="margin-top:100px;" class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                            <button style="margin-top:100px;" class="btn btn-lg" type="reset"><a href="~/Home/UserDashboard">Back</a></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function onSuccess() {
            alert("Account Updated Successfully");
            window.location.href = "/Home/UserDashboard";
        }
    </script>
}