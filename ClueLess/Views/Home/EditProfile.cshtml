@model ClueLess.Models.Account
<div class="container bootstrap snippet" style="margin-top: 5%">
    <div class="row">
        <div class="col-sm-10"><h1>User name</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
        </div><!--/col-3-->
        <div class="col-sm-9">

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    @using (Html.BeginForm("CreateAccount", "UserController", FormMethod.Post))
                    {
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>First name</h4></label>
                                @Html.TextBoxFor(model => model.FirstName)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Last name</h4></label>
                                @Html.TextBoxFor(model => model.LastName)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Email</h4></label>
                                @Html.TextBoxFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label><h4>Password</h4></label>
                                @Html.TextBoxFor(model => model.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <button style="margin-top:100px;" class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                <button style="margin-top:100px;" class="btn btn-lg" type="reset"><a href="~/Home/UserDashboard">Back</a></button>
                            </div>
                        </div>
                    }
                </div><!--/tab-pane-->
            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->